@using Syncfusion.EJ2
@using Syncfusion.EJ2.Notifications;
@{
    ViewData["Title"] = "Upload";

}
<div class="col-lg-12 col-sm-12 col-md-12 center">

    <div class="row" style="height:30%;padding:0px">
        <div class="col-sm">
        </div>
        <div class="col-sm" style="
                background: #1aabf6;
                border: 1px solid #fff;
                border-radius: 11px;
                padding: 10px;
                ">
            <form class="login100-form validate-form" method="post" enctype="multipart/form-data" asp-controller="Upload" asp-action="UploadFile">
                <div class="login100-form-avatar">
                    <img src="~/images/avatar-01.jpeg" alt="AVATAR">
                </div>

                <span class="login100-form-title" style="padding-bottom: 5px;">
                    Welcome Ilyas !
                </span>


                <div class="wrap-input100 validate-input m-b-10">
                    <input type="file" name="files" multiple class="inputUpload" accept=".jpg, .jpeg, .jfif, .pcx, .pdf, .tif, .tiff,  .png, .bmp"/>

                    <span class="focus-input100"></span>
                </div>
                <div class="container-login100-form-btn p-t-10">
                    <input type="submit" value="Upload" class="login100-form-btn" style="cursor:pointer" />
                    <input type="button" value="LogOut" onclick="window.location.href='@Url.Action("LogOut", "Upload")';" class="login100-form-btn" style="cursor:pointer;margin-top:10px" />
                </div>
            </form>
        </div>
        <div class="col-sm">
        </div>
    </div>
    <div class="row" style="padding-top: 10px;height:70%">
        <div class="col-md-12">
            <ejs-grid id="Grid1" dataSource="ViewBag.dataSource" TextWrapping="NoWrap"  allowPaging="true" queryCellInfo="tooltip" allowSorting="true" allowFiltering="true"  showColumnMenu="true">
                <e-grid-pagesettings pageCount="5" pageSize="5"></e-grid-pagesettings>
                <e-grid-columns>
                    <e-grid-column field="MrzType" headerText="MrzType"></e-grid-column>
                    <e-grid-column field="Line1" headerText="Line1" width="100"></e-grid-column>
                    <e-grid-column field="Line2" headerText="Line2" width="100"></e-grid-column> 
                    <e-grid-column field="IssuingCountry" headerText="Country"></e-grid-column>
                    <e-grid-column field="DocumentNumber" headerText="Doc.No"></e-grid-column>
                    <e-grid-column field="DocumentNumberVerified" headerText="IsValid"></e-grid-column>
                    <e-grid-column field="Nationality" headerText="Nationality"></e-grid-column>
                    <e-grid-column field="BirthDate" headerText="BirthDate"></e-grid-column>
                    <e-grid-column field="Sex" headerText="Sex"></e-grid-column>
                    <e-grid-column field="ExpiryDate" headerText="Exp.Dt"></e-grid-column>
                    <e-grid-column field="FileName" headerText="FileName"></e-grid-column>
                    <e-grid-column field="isKYCVerified" headerText="IsKYCVerified" width="150"></e-grid-column>
                    <e-grid-column field="CreatedDate" headerText="Created Date" width="250"></e-grid-column> 

                </e-grid-columns>
            </ejs-grid>

        </div>
        @if (ViewBag.Message == "Success")
        {
            <div id="message">
                <div style="padding: 5px;">
                    <div id="inner-message" class="alert alert-success">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        File Uploaded Successfully 
                    </div>
                </div>
            </div>
        }
        @if (ViewBag.Message == "Error")
        {
            <div id="message">
                <div style="padding: 5px;">
                    <div id="inner-message" class="alert alert-danger">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        Sorry, Something went wrong 
                     </div>
                </div>
            </div>
        }

    </div>
</div>
 

<script> 
    function tooltip(args) {
        var tooltip = new ej.popups.Tooltip({
            content: args.data[args.column.field].toString()
        }, args.cell);
    }
    function ValidateRegister(obj) {
        $(obj).submit();
    }
</script> 